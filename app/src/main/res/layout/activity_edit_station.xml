<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.station_edit_screens.EditStationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_station_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/txtView_editFuelStation_edit_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_station_details"
            android:textSize="25sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_license_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_license_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/license_hint"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_stationName_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_name"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_stationName_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/station_name_hint"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_stationAddress_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_address"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_stationAddress_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/station_address_hint"
                    android:inputType="textPostalAddress"
                    android:autofillHints="postalAddress"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_stationPhone_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_stationPhone_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/station_phone_hint"
                    android:inputType="textPostalAddress"
                    android:autofillHints="phone"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_email_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_email"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_stationEmail_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/station_email_hint"
                    android:inputType="textEmailAddress"
                    android:autofillHints="emailAddress"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_website_edit_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/station_website"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                >
                <EditText
                    android:id="@+id/edtText_stationWebsite_edit_station"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slightly_rounded_edittext"
                    android:hint="@string/station_website_hint"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:padding="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="saveChangesButtonClick"
                android:text="@string/save_changes" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>